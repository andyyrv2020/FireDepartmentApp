@model IEnumerable<FireDepartmentManagerWebApp.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
    int totalVehicles = Model.Count();
    int rowNumber = 1;
}
<hr />
<h4>Vehicles - List</h4>
<hr />
<p>
    <div style="margin-bottom: 10px;">
        <a asp-action="Create" class="btn btn-primary">
            Register New Vehicle <i class="bi bi-pencil-square"></i>
        </a>
    </div>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-success">
                    <th colspan="10" style="text-align: center; vertical-align: middle;">
                        Vehicles List : @totalVehicles Total
                    </th>
                </tr>
                <tr class="table-primary">
            <th style="text-align: center; vertical-align: middle;"><strong>#</strong></th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsMonday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsTuesday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsWednesday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsThursday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsFriday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.IsSaturday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.isSunday)
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;"><strong>@rowNumber</strong></td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsMonday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsTuesday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsWednesday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsThursday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsFriday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.IsSaturday)
            </td>
            <td style="text-align: center; vertical-align: middle; font-size: 17px;">
                            @Html.DisplayFor(modelItem => item.isSunday)
            </td>
                <td style="text-align: center; vertical-align: middle;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
        </tr>
            rowNumber++;
}
    </tbody>
</table>
